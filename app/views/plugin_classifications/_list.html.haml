%table
  %thead
    %tr
      %th{:width => '31.7%'}= 'Risk'
      %th{:width => '31.7%'}= 'Family'
      %th{:width => '31.7%'}= 'Classification'

  - if plugin_classifications.respond_to?(:page)
    %tfoot
      %tr
        %th{:colspan => 3}= paginating_links(plugin_classifications, :window_size => 3)

  %tbody
    - if plugin_classifications.size == 0
      %tr
        %td{:colspan => 3}= '&nbsp;'

    - for plugin_classification in plugin_classifications
      %tr
        %td= plugin_classification.risk
        %td= plugin_classification.family
        %td= plugin_classification.classification
        %td= link_to('Edit', edit_plugin_classification_path(plugin_classification))

