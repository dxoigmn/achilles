%table
  %thead
    %tr
      %th{:width => '31.7%'}= 'Location'
      %th{:width => '31.7%'}= 'Classification'
      %th{:width => '31.7%'}= 'Severity'

  - if severities.respond_to?(:page)
    %tfoot
      %tr
        %th{:colspan => 3}= paginating_links(severities, :window_size => 3)

  %tbody
    - if severities.size == 0
      %tr
        %td{:colspan => 3}= '&nbsp;'

    -for severity in severities
      %tr
        %td= severity.location
        %td= severity.classification
        %td= severity.severity
        %td= link_to('Edit', edit_severity_path(severity))
