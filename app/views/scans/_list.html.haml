%table
  %thead
    %tr
      %th{:width => '20%'}= 'Name'
      %th{:width => '45%'}= 'Locations'
      %th{:width => '20%'}= 'Starts At'
      %th{:width => '10%'}= 'State'

  - if scans.respond_to?(:page)
    %tfoot
      %tr
        %th{:colspan => 4}= paginating_links(scans, :window_size => 3)

  %tbody
    - if scans.size == 0
      %tr
        %td{:colspan => 4}= '&nbsp;'

    -for scan in scans
      %tr
        %td= scan.name
        %td= scan.location_names
        %td= scan.starts_at
        %td= scan.state.capitalize
        %td= link_to('Show', scan)
